@{
}

@model IEnumerable<ToDoList.Models.Item>

<html>
<head>
		<title>To Do List</title>
</head>
<body>
		<h2>To Do List!</h2>
		<h4>@Html.DisplayNameFor(model => model.Description)</h4>
		<ul>
			@foreach(var listItem in Model)
			{
			    <li>@Html.DisplayFor(modelItem => listItem.Description) | @Html.ActionLink("Details", "Details", new { id = listItem.id }) | @Html.ActionLink("Edit", "Edit", new { id = listItem.id }) | @Html.ActionLink("Delete", "Delete", new { id = listItem.id })</li>
			}
		</ul>
		 <p>@Html.ActionLink("Add new item", "Create")</p>
</body>
</html>